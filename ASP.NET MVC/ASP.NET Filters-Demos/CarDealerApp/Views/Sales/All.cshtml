@model IEnumerable<CarDealer.Models.ViewModels.Sales.SaleVm>

@{
    ViewBag.Title = "All Sales";
}
<br />
@Html.ActionLink("Add", "Add", null, new { @class = "btn btn-lg btn-success" })
<br />
<br />

<table class="table table-striped">
    <tr>
        <th>Car sold</th>
        <th>Car sold to</th>
        <th>Sale Price</th>
        <th>Sale Discount</th>
    </tr>


    @foreach (var sale in Model)
    {
        <tr>
            <td>@sale.Car.Model @sale.Car.Make</td>
            <td>@sale.Customer.Name</td>
            <td>@sale.Price</td>
            <td>@sale.Discount</td>
        </tr>
    }

</table>

