@using ModelBinders.Models;
@model MovieDetailedInputModel
@{
    ViewBag.Title = "AddNested";
}

<h2>AddNested</h2>

@using (Html.BeginForm("AddNestedWithModel", "Movies"))
{
    <div class="form-control">
        @Html.LabelFor(x => x.Title)
        @Html.EditorFor(x => x.Title)     
    </div>

    <div class="form-control">
        @Html.LabelFor(x => x.Review)
        @Html.EditorFor(x => x.Review)
    </div>

    <div class="form-control">
        @Html.LabelFor(x => x.LengthInMinutes)
        @Html.EditorFor(x => x.LengthInMinutes)
    </div>

    <div class="form-control">
        @Html.LabelFor(x => x.ReleaseDate)
        @Html.EditorFor(x => x.ReleaseDate)
    </div>

    <div class="form-control">
        @Html.LabelFor(x => x.Address.Town)
        @Html.EditorFor(x => x.Address.Town)
    </div>

    <div class="form-control">
        @Html.LabelFor(x => x.Address.Country)
        @Html.EditorFor(x => x.Address.Country)
    </div>

    <div class="form-control">
        <input type="submit" name="name" value="Add Movie" />
    </div>
}
