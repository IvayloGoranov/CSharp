<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Views.EntryPage">
  <Label Text="{Binding MainText}" VerticalOptions="Center" HorizontalOptions="Center" />

  <StackLayout>
    <Entry Placeholder="Username" HorizontalOptions="CenterAndExpand"
            VerticalOptions="Center" TextChanged="OnUserNameTextChanged"/>
    <Entry Placeholder="Password" IsPassword="True" HorizontalOptions="CenterAndExpand"
            VerticalOptions="Center"/>
  </StackLayout>

</ContentPage>