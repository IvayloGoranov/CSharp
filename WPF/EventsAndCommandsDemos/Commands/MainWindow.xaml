<Window x:Class="Commands.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Commands"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Button Height="23" HorizontalAlignment="Left" Margin="22,21,0,0" x:Name="buttonCopy"
                VerticalAlignment="Top" Width="75" Command="ApplicationCommands.Copy">
            _Copy
        </Button>
        <Button Height="23" HorizontalAlignment="Left" Margin="22,61,0,0" x:Name="buttonPaste"
                VerticalAlignment="Top" Width="75" Command="ApplicationCommands.Paste">
            _Paste
        </Button>
    </Grid>
</Window>
