<Window x:Class="Label.LabelWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Label Demo" Height="107" Width="260" Background="BurlyWood">
    <StackPanel Orientation="Horizontal" >
        <Label Width="46" Height="30" Target="{Binding ElementName=TextBoxNameText}">_Name:</Label>
        <TextBox Name="TextBoxNameText" Width="57" Height="30"/>
        <Label Target="{Binding ElementName=TextBoxQuestText}" Height="30" Width="49">_Quest:</Label>
        <TextBox Name="TextBoxQuestText" Width="57" Height="30"/>
    </StackPanel>
</Window>
