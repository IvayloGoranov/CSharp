<Window x:Class="GroupBoxAndExpander.GroupBoxWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="GroupBox and Expander Demo" Height="187" Width="256">
  <StackPanel Orientation="Horizontal" Height="130" Width="224">
    <GroupBox  Height="75" Width="105">
      <GroupBox.Header>
        <TextBlock>GroupBox</TextBlock>
      </GroupBox.Header>
      <Border Margin="2" Background="White" Padding="3" Height="58" Width="88">
        <StackPanel Height="48" Width="88">
          <RadioButton Content="Half-full" IsChecked="True" />
          <RadioButton Content="Half-empty" />
        </StackPanel>
      </Border>
    </GroupBox>
    <Expander Header="Expander" IsExpanded="True"
              Background="#def" VerticalAlignment="Center" MinWidth="90"
              Margin="10,0" Height="79" Width="90">
      <Border Margin="2" Background="White" Padding="3" Height="51" Width="83">
        <StackPanel>
          <RadioButton Content="Half-full" IsChecked="True" />
          <RadioButton Content="Half-empty" />
        </StackPanel>
      </Border>
    </Expander>
  </StackPanel>
</Window>
